{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "CLAUDE.md",
      "README.md",
      "DEPLOY.md",
      "FIRESTORE_SCHEMA.md",
      "GEMINI.md",
      "GITHUB_SETUP.md",
      "UI_UX_RECOMMENDATIONS.md",
      "ticketmaster.md",
      "tabu.html",
      "ambra.html",
      "loretto.html",
      "error_log.txt",
      "provider_error.txt",
      ".tmp/**",
      "setup_workload_identity.ps1",
      "tests/**"
    ],
    "cleanUrls": true,
    "trailingSlash": false,
    "rewrites": [
      {
        "source": "/dining",
        "destination": "/dining/dining.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(html|js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      },
      {
        "source": "**/*.@(jpg|jpeg|png|gif|webp|svg)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=86400"
          }
        ]
      }
    ]
  }
}